<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DisplaySwitcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DisplaySwitcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="stackPanel">
        <Button x:Name="pinTaskBar" Style="{StaticResource AccentButtonStyle}" Margin="5" Width="{Binding ActualWidth, ElementName=stackPanel}" Click="PinTaskBar_Click">Pin Taskbar</Button>
        <Button x:Name="firstScreen" Style="{StaticResource AccentButtonStyle}" Margin="5" Width="{Binding ActualWidth, ElementName=stackPanel}" Click="FirstScreen_Click">First Screen</Button>
        <Button x:Name="secondScreen" Style="{StaticResource AccentButtonStyle}" Margin="5" Width="{Binding ActualWidth, ElementName=stackPanel}" Click="SecondScreen_Click">Second Screen</Button>
        <Button x:Name="duplicateScreen" Style="{StaticResource AccentButtonStyle}" Margin="5" Width="{Binding ActualWidth, ElementName=stackPanel}" Click="DuplicateScreen_Click">Duplicate Screen</Button>
        <Button x:Name="extendScreen" Style="{StaticResource AccentButtonStyle}" Margin="5" Width="{Binding ActualWidth, ElementName=stackPanel}" Click="ExtendScreen_Click">Extend Screen</Button>
    </StackPanel>
    
</Window>
